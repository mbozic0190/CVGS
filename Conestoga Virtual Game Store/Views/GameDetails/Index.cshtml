@model IEnumerable<Conestoga_Virtual_Game_Store.Models.game>

@{
    ViewBag.Title = "Index";
}

<h2>Select a Game</h2>

<p>
@using (Html.BeginForm("Search", "GameDetails"))
{
    <input id="SearchGame" name="SearchGame" type="text" value="" />
    <input type="submit" value="Search" />

}
</p>
<table class="table">
    <tr>
        <th>
            <h3>Game Title</h3>
        </th>
        <th>
            <h3>Category</h3>
        </th>
        <th>
            <h3>Developer</h3>
        </th>
        <th>
            <h3>Price</h3>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.game_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.category_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.developer.developer_name)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.game_id })
        </td>
    </tr>
}

</table>
