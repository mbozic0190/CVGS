@model IEnumerable<Conestoga_Virtual_Game_Store.Models._event>

@{
    ViewBag.Title = "Index";
}

<h2>Select an Event</h2>
<hr />

@using (Html.BeginForm("Search", "EventDetails"))
{
    @*@Html.TextBox("TextBoxName")*@
    <input id="SearchEvent" name="SearchEvent" type="text" value="" />
    <input type="submit" value="Search" />

}  
<table class="table">
    <tr>
        <th>
            <h3>Event Name</h3>
        </th>
        <th>
            <h3>Event Date</h3>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.event_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.event_date)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.event_id })
        </td>
    </tr>
}

</table>
