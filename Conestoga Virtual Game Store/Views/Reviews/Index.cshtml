@model IEnumerable<Conestoga_Virtual_Game_Store.Models.review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.game_platforms.game.game_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.game_platforms.platform.platform_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.review_text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.game_platforms.game.game_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.game_platforms.platform.platform_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.review_text)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.review_id }) |
            @Html.ActionLink("Accept", "Accept", new { id = item.review_id }) |
            @Html.ActionLink("Deny", "Deny", new { id = item.review_id })
        </td>
    </tr>
}

</table>
